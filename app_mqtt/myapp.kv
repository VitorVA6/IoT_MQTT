<Manager>:
    DummyScreen:
    ConScreen:
        name: 'connect'
    TopicScreen:
        name: 'topics'

<ConScreen>:

    FloatLayout:
        MDIcon:
            icon: 'video-input-antenna'
            color: '#673AB7'
            adaptive_size: True
            pos_hint: {"center_x": .5, "center_y": .8}
            allow_selection: True
            font_size: '80sp' 
        MDTextField:
            hint_text: "Broker"
            pos_hint: {'center_x': .5,'center_y': .65}
            size_hint_x: .6
            id: mqtt
        MDTextField:
            hint_text: "Porta"
            pos_hint: {'center_x': .5,'center_y': .55}
            size_hint_x: .6
            id: porta
        MDTextField:
            hint_text: "Usuário"
            pos_hint: {'center_x': .5,'center_y': .45}
            size_hint_x: .6
            id: user
        MDTextField:
            hint_text: "Senha"
            pos_hint: {'center_x': .5,'center_y': .35}
            size_hint_x: .6
            id: password
        MDTextField:
            hint_text: "ID"
            pos_hint: {'center_x': .5,'center_y': .25}
            size_hint_x: .6
            id: cli
        MDLabel:
            text: ''
            pos_hint: {'center_x': .5,'center_y': .2}
            id: msg
            font_style: 'Caption'
            halign: "center"
            theme_text_color: 'Custom'
            text_color: 1, 0, 0, 1
        MDRoundFlatButton:
            text: "Connect"
            pos_hint: {'center_x': .5,'center_y': .1}
            size_hint_x: .4
            padding_vertical: "8dp"     
            theme_text_color: 'Custom'
            text_color: '#673AB7'      
            on_release: root.connect_broker()

<TopicScreen>:
    MDFloatLayout:
        orientation: "vertical"

        MDToolbar:
            title: "Dashboard"
            left_action_items: [["arrow-left", lambda x: root.back_start()]]
            right_action_items: [["cog-outline", lambda x: x]]
            pos_hint: {'top': 1}
            md_bg_color: rgba(18, 18, 18, 1)

        MDFloatLayout:
            
            Topic:
                id: sensor_an
                text_name: 'SENSOR_A0'
                text_sensor: '0.00'
                text_unidade: 'Volts'
                icon_name: 'flash'
                pos_hint: {'center_x': 0.2,'center_y': 0.6}
            Topic:
                id: sensor_d0
                text_name: 'SENSOR_D0'
                text_sensor: 'HIGH'
                text_unidade: 'Level'
                icon_name: 'square-wave'
                pos_hint: {'center_x': 0.5,'center_y': 0.6}
            Topic:
                id: sensor_d1
                text_name: 'SENSOR_D1'
                text_sensor: 'HIGH'
                icon_name: 'square-wave'
                pos_hint: {'center_x': 0.8,'center_y': 0.6}
                text_unidade: 'Level'
        

<TopCard>:
    orientation: 'vertical'
    size_hint: .6, .6
    pos_hint: {'center_x': .5,'center_y': .5}
    radius: dp(20)

    MDBoxLayout:
        size_hint_y: .2
        md_bg_color: app.theme_cls.primary_color
        MDLabel:
            text: "Add Topic"
            halign: 'center'
            font_style: 'H6'
            theme_text_color: 'Custom'
            text_color: 1, 1, 1, 1
        MDIconButton:
            icon: 'close'
            theme_text_color: 'Custom'
            text_color: 1, 1, 1, 1
            pos_hint: {'center_x': .9,'center_y': .5}
            on_release: root.close_card()

    MDFloatLayout:        
        MDTextField:
            hint_text: "Topic"
            size_hint_x: .8
            pos_hint: {'center_x': .5,'center_y': .8}
            id: topic
        MDTextField:
            hint_text: "Name"
            size_hint_x: .8
            pos_hint: {'center_x': .5,'center_y': .6}
            id: name
        MDBoxLayout:
            pos_hint: {'center_x': 0.5,'center_y': .4}
            size_hint: .85, .2
            MDCheckbox:
                size_hint: None, None
                size: "40dp", "40dp"
                pos_hint: {'center_x': .5, 'center_y': .5}
            MDLabel:
                text: "Publish"      
                font_style: 'Subtitle2' 
        MDLabel:
            text: ""
            pos_hint: {'center_x': .5,'center_y': .3}
            theme_text_color: 'Custom'
            text_color: 1, 0, 0, 1
            halign: 'center'
            id: msg_error        
            font_style: 'Caption'       

        MDRoundFlatButton:
            text: "Confirm"
            size_hint_x: .6
            theme_text_color: 'Custom'
            text_color: '#673AB7'
            padding_vertical: "8dp"
            pos_hint: {'center_x': .5,'center_y': .15}
            on_release: root.add_card(name.text, topic.text)

<Topic>:
    orientation: 'vertical'
    size_hint_y:None
    size_hint_x:None
    height:'280dp'
    width:'250dp'
    text_unidade: ''
    text_name: ''
    text_sensor: ''
    icon_name: ''
    MDBoxLayout:
        orientation: 'vertical'
        size_hint_y: .2
        MDLabel:
            text: root.text_name
            halign: 'center'
            font_style: 'Subtitle1'
            size_hint_y: .2
            theme_text_color: 'Custom'
            text_color: '#673AB7'
    MDFloatLayout:

        MDIcon:
            icon: root.icon_name
            color: '#673AB7'
            adaptive_size: True
            pos_hint: {"center_x": .5, "center_y": .9}
            allow_selection: True
            font_size: '50sp' 

        MDLabel:
            text: root.text_sensor
            halign: 'center'
            font_style: 'H2'
            theme_text_color: "Custom"
            text_color: '#673AB7'
            pos_hint: {'center_x': .5,'center_y': .6}
        
        MDLabel:
            text: root.text_unidade
            halign: 'center'
            font_style: 'Subtitle2'
            theme_text_color: "Custom"
            text_color: '#673AB7'
            pos_hint: {'center_x': .5,'center_y': .45}

        MDLabel:
            text: 'Last update in 22:40:20'
            halign: 'center'
            font_style: 'Caption'
            theme_text_color: "Custom"
            text_color: '#673AB7'
            pos_hint: {'center_x': .5,'center_y': .35}
        
        MDRoundFlatButton:
            text: "Graphics"
            size_hint_x: .8
            pos_hint: {'center_x': .5,'center_y': .15}
            theme_text_color: 'Custom'
            text_color: '#673AB7'
            padding_vertical: "2dp"
            on_release: app.root.get_screen('topics').create_graph()

<Graphics>:
    
    orientation: 'vertical'
    size_hint: .7, .7
    pos_hint: {'center_x': .5,'center_y': .5}  
    elevation: 10
    MDBoxLayout:
        size_hint_y: .15
        md_bg_color: app.theme_cls.primary_color
        MDLabel:
            text: "Histórico"
            halign: 'center'
            font_style: 'H6'
            theme_text_color: 'Custom'
            text_color: 1, 1, 1, 1
        MDIconButton:
            icon: 'close'
            theme_text_color: 'Custom'
            text_color: 1, 1, 1, 1
            pos_hint: {'center_x': .9,'center_y': .5}
            on_release: root.close_card()
    
    MDBoxLayout:  
        id: graph
        size_hint_y: .85  
        padding: '20dp'